{
      "include": ["src/**/*"],
      "exclude": [
            "node_modules",
            "build"
      ],
      "compilerOptions": {
            "baseUrl": ".",
            "rootDir": "src",
            "noImplicitUseStrict" : true,
            "noStrictGenericChecks":true,
            "allowSyntheticDefaultImports": true,
            "experimentalDecorators": true,
            "allowJs": false,
            "module": "es2015",
            "target": "es5",
            "moduleResolution": "node",
            "strictFunctionTypes": false,
            "lib": [
                  "dom",
                  "es6",
                  "es2015.promise"
            ],
            "sourceMap": true,
            "pretty": true,
            "typeRoots": [],
            "types": []
      }
}
